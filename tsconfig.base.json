{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@jv/demo-app/data-access/articles": ["libs/demo-app/data-access/articles/src/index.ts"],
      "@jv/demo-app/features/article-create": ["libs/demo-app/features/article-create/src/index.ts"],
      "@jv/demo-app/features/article-show": ["libs/demo-app/features/article-show/src/index.ts"],
      "@jv/demo-app/features/home": ["libs/demo-app/features/home/src/index.ts"],
      "@jv/demo-app/features/login": ["libs/demo-app/features/login/src/index.ts"],
      "@jv/demo-app/features/shell": ["libs/demo-app/features/shell/src/index.ts"],
      "@jv/demo-app/ui/layout": ["libs/demo-app/ui/layout/src/index.ts"],
      "@jv/shared/core/http-client": ["libs/shared/core/http-client/src/index.ts"],
      "@jv/shared/data-access/auth": ["libs/shared/data-access/auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
