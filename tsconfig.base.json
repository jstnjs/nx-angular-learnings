{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jv/demo-app/features/home": [
        "libs/demo-app/features/home/src/index.ts"
      ],
      "@jv/demo-app/features/login": [
        "libs/demo-app/features/login/src/index.ts"
      ],
      "@jv/demo-app/features/shell": [
        "libs/demo-app/features/shell/src/index.ts"
      ],
      "@jv/demo-app/ui/layout": ["libs/demo-app/ui/layout/src/index.ts"],
      "@jv/shared/core/http-client": [
        "libs/shared/core/http-client/src/index.ts"
      ],
      "@jv/shared/data-access/auth": [
        "libs/shared/data-access/auth/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
